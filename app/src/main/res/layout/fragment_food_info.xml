<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.drugs.DrugOverviewFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="info"
            type="kr.ac.cbnu.saengsaengyaktong.api.health_supplements.FoodInfo" />

        <variable
            name="detailInfo"
            type="kr.ac.cbnu.saengsaengyaktong.api.health_supplements.FoodDetailInfo" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="@{detailInfo == null ? View.VISIBLE : View.GONE}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.companyName != null ? View.VISIBLE : View.GONE}"
                    app:body="@{info.companyName}"
                    app:title="@{`제조사명`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.expiryDate != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.expiryDate}"
                    app:title="@{`유통기한`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.description != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.description}"
                    app:title="@{`성상`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.intakeMethod != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.intakeMethod}"
                    app:title="@{`섭취 방법`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.packingMaterial != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.packingMaterial}"
                    app:title="@{`포장 재질`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.custodyMethod != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.custodyMethod}"
                    app:title="@{`보존 및 유통 기준`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.cautions != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.cautions}"
                    app:title="@{`주의 사항`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.functionalities != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.functionalities}"
                    app:title="@{`기능성`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.standards != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.standards}"
                    app:title="@{`기준 및 규격`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.functionalityMaterials != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.functionalityMaterials}"
                    app:title="@{`기능성 원료`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.otherMaterials != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.otherMaterials}"
                    app:title="@{`기타 원료`}" />

                <include
                    layout="@layout/info_card"
                    android:visibility="@{detailInfo.capsuleMaterials != null ? View.VISIBLE : View.GONE}"
                    app:body="@{detailInfo.capsuleMaterials}"
                    app:title="@{`캡슐 원료`}" />

            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.core.widget.NestedScrollView>
</layout>